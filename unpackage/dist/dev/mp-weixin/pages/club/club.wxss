.content {
  width: 100%;
  min-height: 100%;
  padding: 18rpx;
  box-sizing: border-box;
}
.block .title {
  font-size: 32rpx;
  letter-spacing: 3rpx;
  font-weight: bolder;
  padding: 20rpx 0;
}
.block .list {
  padding: 10rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.list_item {
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}
.list_item ._img {
  width: 88rpx;
  height: 88rpx;
  border-radius: 100%;
}
.list_item text {
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 28rpx;
  text-align: center;
}

